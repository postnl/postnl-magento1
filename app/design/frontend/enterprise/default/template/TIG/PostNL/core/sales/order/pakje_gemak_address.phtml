<?php $_helper = Mage::helper('postnl'); ?>
<?php $_order = Mage::registry('current_order'); ?>
<?php $_pakjeGemakAddress = $_helper->getPakjeGemakAddressForOrder($_order); ?>
<?php if (!$_pakjeGemakAddress): ?>
    <?php return ''; ?>
<?php endif; ?>
<div class="col2-set" id="pakje_gemak_address">
    <div class="col-1">
        <div class="info-box">
            <h2 class="box-title"><?php echo $_helper->__('Post Office Address') ?></h2>
            <address class="box-content"><?php echo $_pakjeGemakAddress->format('html') ?></address>
        </div>
    </div>
</div>
<script type="text/javascript">
    //<![CDATA[
    document.observe('dom:loaded', function() {
        var pakjeGemakAddress = $('pakje_gemak_address');
        var orderPage = $$('.order-page')[0];
        if (orderPage) {
            orderPage.insert({
                bottom: pakjeGemakAddress
            });
        }
    });
    //]]>
</script>
